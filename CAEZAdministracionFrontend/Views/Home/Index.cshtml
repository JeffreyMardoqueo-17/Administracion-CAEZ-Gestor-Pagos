@model List<Administrador>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="card">
    <div class="card-header">
        Lista Administrador
    </div>
    <div class="card-body">
        <!-- Enlace para agregar un nuevo usuario -->
        <a asp-action="Administrador" asp-controller="Home" asp-route-idUsuario="0" class="btn btn-success btn-sm">Nuevo Administrador</a>
    </div>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cargo</th>
                <th>Telefono</th>
            </tr>
        </thead>
        <tbody>
            <!-- Bucle para recorrer la lista de usuarios -->
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Mostrar información de cada usuario -->
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.IdCargo</td>
                    <td>@item.Telefono</td>
                    <td>
                        <!-- Enlaces para editar y eliminar usuarios -->
                        <a asp-action="Administrdor" asp-controller="Home" asp-route-idUsuario="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Home" asp-route-idUsuario="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

